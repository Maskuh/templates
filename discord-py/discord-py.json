{
  "display": "discord.py Bot",
  "type": "discord",
  "data": {
    "bot-py-file": {
      "type": "string",
      "desc": "The main bot file.",
      "display": "Main bot file",
      "required": true,
      "value": "bot.py"
    },
    "req-txt-file": {
      "type": "string",
      "desc": "The file used to install the python libs.",
      "display": "Requirements txt file",
      "required": true,
      "value": "requirements.txt"
    }
  },
  "install": [
   {
            "type": "command",
            "commands": [
                "python3 -m venv python"
            ]
        },
        {
            "type": "command",
            "commands": [
                "python/bin/python3 -m pip install -r requirements.txt"
            ]
        }
    ],
  "run": {
    "command": "python/bin/python3 ${bot-py-file}",
    "stopCode": 2
  },
  "environment": {
    "type": "standard"
  },
  "supportedEnvironments": [ {
      "type": "standard"
    },
    {
      "image": "python",
      "networkMode": "host",
      "type": "docker"
    }
  ],
  "requirements": {
    "binaries": [ "python3" ]
  }
}
